{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AlertGroupName": {
      "type": "string"
    },
    "AlertName1": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "LogAppReceiver": {
      "type": "String"
    }
  },
  "variables": {
    "alertShortGroup": "[toLower(parameters('AlertGroupName'))]"
  },
  "resources": [
    {
      "name": "[parameters('AlertGroupName')]",
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2019-03-01",
      "location": "global",
      "tags": {
        "status": "active",
        "costcenter": "shared",
        "project": "shared",
        "team": "devops"
      },
      "properties": {
        "groupShortName": "[variables('alertShortGroup')]",
        "enabled": true,
        "emailReceivers": [
          {
            "name": "[parameters('AlertName1')]",
            "emailAddress": "[parameters('email')]",
            "useCommonAlertSchema": true
          }
        ],
        "logicAppReceivers": [
          {
            "name": "MSTeamGroup",
            "resourceId": "[resourceId('Microsoft.Logic/workflows', parameters('LogAppReceiver'))]",
            "callbackUrl": "[listCallbackURL(concat(resourceId('Microsoft.Logic/workflows', parameters('LogAppReceiver')), '/triggers/manual'), '2016-06-01').value]",
            "useCommonAlertSchema": false
          }
        ]
      }
    }
  ],
  "outputs": {
    "alertGroupID": {
      "type": "string",
      "value": "[resourceId('microsoft.insights/actionGroups', parameters('AlertGroupName'))]"
    }
  }
}