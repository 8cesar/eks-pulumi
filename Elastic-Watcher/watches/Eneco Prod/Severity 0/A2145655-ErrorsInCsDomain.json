{
  "trigger": {
    "schedule": {
      "interval": "15m"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "ene-prod-logs*"
        ],
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "query_string": {
                    "query": "(indexname:WebSocketServer OR indexname:SocketServerPublic OR indexname:SocketServerPrivate OR indexname:TransactionEvents OR indexname:statusservice OR indexname:commandservice OR indexname:chargelocationservice OR indexname:GeoCodingService OR indexname:Legacy.Normalizer OR indexname:MailService OR indexname:ChargeStationServiceWorker OR indexname:ChargeStationServiceApi OR indexname:ChargeStationMigration) AND level:error"
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "lte": "now",
                      "gte": "now-15m"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 1000
      }
    }
  },
  "actions": {
    "MS_Teams": {
      "throttle_period": "15m",
      "webhook": {
        "scheme": "https",
        "method": "POST",
        "host": "greenfluxbv.webhook.office.com",
        "port": 443,
        "path": "$(watcherWebhookSeverity0)",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "source": {
            "text": "<h1>Watch A2145655 (Ene Prod)</h1><br>Errors in CS domain greater than 1000 in the last 15 min"
          }
        }
      }
    }
  }
}