{
  "trigger": {
    "schedule": {
      "interval": "15m"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "ene-prod-logs*"
        ],
        "body": {
          "size": 1000,
          "query": {
            "bool": {
              "must": [
                {
                  "query_string": {
                    "query": "level:Error AND (\"corruption\" OR \"fatal\")"
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "lte": "now",
                      "gte": "now-15m"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 0
      }
    }
  },
  "actions": {
    "MS_Teams": {
      "transform": {
        "script": {
          "source": "def dict=[:];for(int i=0;i<ctx.payload.hits.hits.length;i++){String key=ctx.payload.hits.hits[i]._source.indexname;def cur=dict.get(key);if(cur==null){dict.put(key,1);}else{dict.put(key,cur+1);}} String result='';for(String k:dict.keySet()){result=result+k+ ': ' + dict[k] + '\\\\r\\\\n\\\\r\\\\n';} return result;",
          "lang": "painless"
        }
      },
      "webhook": {
        "scheme": "https",
        "host": "greenfluxbv.webhook.office.com",
        "port": 443,
        "method": "post",
        "path": "$(watcherWebhookTeamBilling)", 
        "params": {},
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "source": {
            "text": "<h1>Watch CRITENE1 (Ene Prod)</h1><br>Critical Failure in the following services:\r\n\r\n{{ctx.payload._value}}\r\n\r\nQuery: `level:Error AND (\"corruption\" OR \"fatal\")`"
          }
        }
      }
    }
  }
}