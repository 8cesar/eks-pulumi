{
  "trigger": {
    "schedule": {
      "interval": "1h"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "gfx-prod-logs*"
        ],
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "query_string": {
                    "query": "indexname:ChargeStationServiceWorker AND (function: *Listener OR function:RefreshConnectivityStatuses) AND \"Finished processing\""
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "lte": "now",
                      "gte": "now-70m"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "lt": 9
      }
    }
  },
  "actions": {
    "MS_Teams": {
      "webhook": {
        "scheme": "https",
        "method": "POST",
        "host": "greenfluxbv.webhook.office.com",
        "port": 443,
        "path": "$(watcherWebhookTeamChargeStation)",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "source": {
            "text": "<h1>Watch 9fr724f7 (Gfx Prod)</h1><br>ChargeStationServiceWorker hourly EventHub successful processing count is lower than 9"
          }
        }
      }
    }
  }
}