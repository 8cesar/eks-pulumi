{
  "trigger": {
    "schedule": {
      "interval": "1h"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "gfx-prod-logs*"
        ],
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "multi_match": {
                    "type": "phrase",
                    "query": "Instance is broken",
                    "lenient": true
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "lte": "now",
                      "gte": "now-60m"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 0
      }
    }
  },
  "actions": {
    "MS_Teams": {
      "webhook": {
        "scheme": "https",
        "method": "POST",
        "host": "greenfluxbv.webhook.office.com",
        "port": 443,
        "path": "$(watcherWebhookSeverity0)",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "source": {
            "text": "<h1>Watch yk9trpb0 (Gfx Prod)</h1><br>Socket Server Instance is Broken in the past 1h."
          }
        }
      }
    }
  }
}