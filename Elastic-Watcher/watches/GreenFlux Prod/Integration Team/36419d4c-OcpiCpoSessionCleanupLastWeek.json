{
  "trigger": {
    "schedule": {
      "interval": "24h"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "gfx-prod-logs*"
        ],
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "query_string": {
                    "query": "indexname:OcpiSessionService AND function:CleanupSessions AND \"Session cleanup completed\""
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "lte": "now",
                      "gte": "now-7d"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "lt": 1
      }
    }
  },
  "actions": {
    "MS_Teams": {
      "throttle_period": "24h",
      "webhook": {
        "scheme": "https",
        "method": "POST",
        "host": "greenfluxbv.webhook.office.com",
        "port": 443,
        "path": "$(watcherWebhookTeamIntegration)",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "source": {
            "text": "<h1>Watch 36419d4c (Gfx Prod)</h1><br>OCPI CPO session cleanup wasn't performed last week"
          }
        }
      }
    }
  }
}