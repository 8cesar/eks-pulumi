{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of existing  Alert Group"
      }
    },
    "alertGroupRegr": {
      "type": "string"
    },
    "sqlDbName": {
      "type": "string"
    },
    "sqlServerName": {
      "type": "string"
    },
    "alertSeverity": {
      "type": "int",
      "defaultValue": 3,
      "allowedValues": [
        0,
        1,
        2,
        3,
        4
      ],
      "metadata": {
        "description": "Severity of alert {0,1,2,3,4}"
      }
    },
    "evaluationFrequency": {
      "type": "string",
      "defaultValue": "PT1M",
      "allowedValues": [
        "PT1M",
        "PT5M",
        "PT15M",
        "PT30M",
        "PT1H"
      ],
      "metadata": {
        "description": "how often the metric alert is evaluated represented in ISO 8601 duration format"
      }
    },
    "windowSize": {
      "type": "string",
      "defaultValue": "PT5M",
      "allowedValues": [
        "PT1M",
        "PT5M",
        "PT15M",
        "PT30M",
        "PT1H",
        "PT6H",
        "PT12H",
        "PT24H"
      ],
      "metadata": {
        "description": "Period of time used to monitor alert activity based on the threshold. Must be between one minute and one day. ISO 8601 duration format."
      }
    },
    "metricName": {
      "type": "string",
      "defaultValue": "cpu_percent"
    },
    "monitname": {
      "type": "string",
      "defaultValue": "CPU percentage"
    },
    "operator": {
      "type": "string",
      "defaultValue": "GreaterThan"
    },
    "threshold": {
      "type": "int",
      "defaultValue": 80
    },
    "timeAggregation": {
      "type": "string",
      "defaultValue": "Average"
    },
    "teamName": {
      "type": "string",
      "metadata": {
        "description": "name of teams"
      }
    }
  },
  "variables": {
    "sqlDatabaseID": "[resourceId('Microsoft.Sql/servers/databases', parameters('sqlServerName'), parameters('sqlDbName'))]",
    "actionGroupID": "[resourceId(parameters('alertGroupRegr'),'microsoft.insights/actionGroups', parameters('alertGroupName'))]",
    "metricAlertName": "[concat(parameters('sqlDbName'), '-azure-sql-server-alert-', parameters('timeAggregation'), parameters('metricName'), parameters('operator'), parameters('threshold'))]",
    "metricAlertDescription": "[concat(parameters('teamName'), ' team alert for the Azure SQL server resource named ', parameters('sqlDbName'), ': ', parameters('monitname'))]"
  },
  "resources": [
    {
      "name": "[variables('metricAlertName')]",
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "location": "global",
      "tags": {
        "status": "active",
        "costcenter": "shared",
        "project": "shared",
        "team": "devops"
      },
      "properties": {
        "description": "[variables('metricAlertDescription')]",
        "severity": "[parameters('alertSeverity')]",
        "enabled": true,
        "scopes": [
          "[variables('sqlDatabaseID')]"
        ],
        "evaluationFrequency": "[parameters('evaluationFrequency')]",
        "windowSize": "[parameters('windowSize')]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "dimensions": [],
              "metricName": "[parameters('metricName')]",
              "name": "[parameters('monitname')]",
              "operator": "[parameters('operator')]",
              "threshold": "[parameters('threshold')]",
              "timeAggregation": "[parameters('timeAggregation')]"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[variables('actionGroupId')]"
          }
        ]
      }
    }
  ]
}
