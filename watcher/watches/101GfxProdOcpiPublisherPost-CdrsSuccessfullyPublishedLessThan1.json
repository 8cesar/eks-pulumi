{
  "trigger": {
    "schedule": {
      "interval": "15m"
    }
  },
  "input": {
    "search": {
      "request": {
        "indices": [
          "gfx-prod-logs*"
        ],
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "match": {
                    "indexname": "OcpiPublisher"
                  }
                },
                {
                  "match": {
                    "function": "post-cdrs"
                  }
                },
                {
                  "match": {
                    "message": "Successfully published"
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "lte": "now",
                      "gte": "now-15m"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "lt": 1
      }
    }
  },
  "actions": {
    "Webhook_Acc01": {
      "throttle_period": "15m",
      "webhook": {
        "scheme": "https",
        "method": "POST",
        "host": "greenfluxbv.webhook.office.com",
        "port": 443,
        "path": "/webhookb2/7d81e64e-b159-4b4e-8619-a91a5b1f4fca@3145cea7-e759-4aeb-b8fc-506e0a02fd91/IncomingWebhook/5f6b94ada0164edf91b4103b1e8f9f45/3d2e77f2-2412-496f-94d8-4fe0f1fbff11",
        "headers": {
          "Content-type": "application/json"
        },
        "body": {
          "source": {
            "text": "Gfx Prod (101): OcpiPublisherPost and CdrsSuccessfullyPublished < 1 in last 15 min"
          }
        }
      }
    }
  }
}